<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc"
        android:orientation="vertical"
        tools:context=".TreasuresEditorActivity">

    <TextView
            android:id="@+id/treasures_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

    <ListView
            android:id="@+id/treasures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:fitsSystemWindows="true">

    </ListView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Szerokość:"
                    android:textSize="@dimen/small_font_size"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Długość:"
                    android:textSize="@dimen/small_font_size"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/editorLongValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00000"
                    android:textSize="@dimen/small_font_size"/>
            <TextView
                    android:id="@+id/editorLatValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00000"
                    android:textSize="@dimen/small_font_size"/>
        </LinearLayout>
        <Button
                android:id="@+id/add_treasure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/chest_small"
                />
    </LinearLayout>
</LinearLayout>